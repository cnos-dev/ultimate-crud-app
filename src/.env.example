# Ultimate CRUD Simple Blog App Configuration
# Copy this file to .env and update with your actual values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=development
PORT=3000
APP_NAME=Ultimate CRUD Blog
APP_VERSION=1.0.0

# ===========================================
# DATABASE CONFIGURATION
# Choose your database type: mysql, postgresql, or sqlite
# ===========================================
DB_DIALECT=sqlite

# ===========================================
# MySQL Configuration (if using MySQL)
# For Docker: Use the credentials from docker-compose.mysql.yml
# ===========================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ultimate_crud_blog
DB_USER=bloguser
DB_PASS=blogpassword

# For production MySQL
# DB_HOST=your_mysql_host
# DB_PORT=3306
# DB_NAME=your_database_name
# DB_USER=your_username
# DB_PASS=your_password

# ===========================================
# PostgreSQL Configuration (if using PostgreSQL)
# For Docker: Use the credentials from docker-compose.postgres.yml
# ===========================================
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=ultimate_crud_blog
# DB_USER=bloguser
# DB_PASS=blogpassword

# For production PostgreSQL
# DB_HOST=your_postgres_host
# DB_PORT=5432
# DB_NAME=your_database_name
# DB_USER=your_username
# DB_PASS=your_password

# ===========================================
# SQLite Configuration (if using SQLite)
# ===========================================
SQLITE_PATH=./blog.db

# ===========================================
# ULTIMATE CRUD SETTINGS
# ===========================================
# Enable/disable features
ENABLE_REST_API=true
ENABLE_GRAPHQL=true
ENABLE_ADMIN_UI=true

# API Configuration
API_PREFIX=/api
GRAPHQL_ENDPOINT=/graphql
ADMIN_UI_ENDPOINT=/admin

# ===========================================
# SECURITY SETTINGS
# ===========================================
# JWT Secret for authentication (generate a strong secret)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS Settings
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ===========================================
# LOGGING AND MONITORING
# ===========================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_QUERY_LOGGING=false

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# FILE UPLOAD SETTINGS
# ===========================================
UPLOAD_MAX_FILE_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif
UPLOAD_DIRECTORY=./uploads

# ===========================================
# EMAIL SETTINGS (for notifications)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Ultimate CRUD Blog
